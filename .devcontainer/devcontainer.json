		"../docker-compose.yml"
	],
	"service": "mage",
	"workspaceFolder": "/home/src",
	"customizations": {
		"vscode": {
			"extensions": [
					"ms-azuretools.vscode-docker",
					"ms-python.python",
					"ms-python.vscode-pylance",
